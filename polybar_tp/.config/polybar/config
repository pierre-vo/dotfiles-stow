;format-muted  = %{T1}üîá%{T-}
format-muted  = %{T1}ÔÄ¶X%{T-}
ramp-volume-0 = %{T1}ÔÄ¶ %{T-}
ramp-volume-1 = %{T1}ÔÄß %{T-}
ramp-volume-2 = %{T1}ÔÄ® %{T-}

ramp-headphones-0 = ÔÄ•
ramp-headphones-1 = ÔÄ•

[module/battery1]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

interval = 30

time-format = %H:%M

label-charging = %percentage%%
;label-discharging = %time% 
label-discharging = ${self.label-charging} 
label-full = 

format-charging-prefix = 
format-charging-prefix-foreground = ${colors.foreground-alt}
;format-charging = <animation-charging> <label-charging>
format-charging = [C] <label-charging>
format-charging-underline = ${colors.blue}

format-discharging-prefix = ${self.format-charging-prefix}
format-discharging = [D] <label-discharging>
format-discharging-prefix-foreground = ${colors.foreground-alt}
format-discharging-underline = ${colors.yellow}

format-full-prefix = ${self.format-charging-prefix}
format-full = [F]
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${colors.green}

ramp-capacity-0 = [0]
ramp-capacity-1 = [1]
ramp-capacity-2 = [2]
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = [%{F#770000}C%{F-}]
animation-charging-1 = [C]
;animation-charging-2 = √ÆÀÜ¬∏
animation-charging-foreground = ${colors.foreground}
animation-charging-framerate = 1000

[module/battery2]
inherit = module/battery1
type = internal/battery
battery = BAT1

[module/temperature]
type = internal/temperature
interval = 10
thermal-zone = 0
warn-temperature = 60

hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input

format = <label>
format-underline = ${colors.background}
format-warn = <label-warn>
format-warn-underline = ${colors.alert}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

